# HoundCOGS Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# API keys (comma-separated list)
# Leave empty for development (no auth required)
API_KEYS=

# Server settings
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Database
# =============================================================================

# SQLite database path
DATABASE_URL=sqlite:///./data/db/houndcogs.db

# =============================================================================
# File Storage
# =============================================================================

# Upload directory
UPLOAD_DIR=./data/uploads

# Export directory
EXPORT_DIR=./data/exports

# Cache directory
CACHE_DIR=./data/cache

# Max upload size in MB
MAX_UPLOAD_SIZE_MB=50

# =============================================================================
# External Services
# =============================================================================

# OpenAI API key (for Whisper transcription)
OPENAI_API_KEY=

# =============================================================================
# CORS
# =============================================================================

# Allowed origins (comma-separated, or * for all)
CORS_ORIGINS=http://localhost:8501

# =============================================================================
# UI Configuration
# =============================================================================

# API URL for UI to connect to
UI_API_BASE_URL=http://localhost:8000

# API key for UI (should match one of API_KEYS)
UI_API_KEY=

# Page title
UI_PAGE_TITLE=HoundCOGS

# =============================================================================
# Optional: Background Jobs (Redis)
# =============================================================================

# Redis URL for background job queue
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO
